<!-- app/views/texts/index.html.erb -->
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-auto">
      <h3 class="text-center">Tudo que voce jรก escreveu</h3>
    </div>
  </div>
  <div class="row justify-content-center mt-4">
    <div class="col-md-8">
      <%= link_to 'New Text', new_text_path, class: 'btn btn-primary mb-3', data: { turbo_frame: 'new_text' } %>
      <div id="texts">
        <%= turbo_frame_tag 'texts' do %>
          <ul class="list-group">
            <% @texts.each do |text| %>
              <li class="list-group-item w-50" id="text_<%= text.id %>">
                <%= turbo_frame_tag "text_#{text.id}" do %>
                  <div class="w-100 d-flex justify-content-between">
                    <%= link_to text.title, text, class: 'text-decoration-none text-start' %>
                    <span class="badge bg-secondary text-white align-self-end"><%= text.created_at.strftime("%d/%m/%Y") %></span>
                  </div>
                <% end %>
              </li>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>
