<section class="h-100 gradient-form mb-5">
  <div class="container py-3 h-80">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-6">
              <div class="card-body p-md-5 mx-md-4">

                <div class="text-center">
                  <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
                    style="width: 185px;" alt="logo">
                  <h4 class="mt-1 mb-5 pb-1">Escreva.App</h4>
                </div>

                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                  <div class="field mb-3">
                    <%= f.label :email, 'Email', class: "form-label" %><br />
                    <%= f.email_field :email, autofocus: true, class:"form-control" ,autocomplete: "email", placeholder: "hemingway@gmail.com" %>
                  </div>

                  <div class="field mb-3">
                    <%= f.label :password, 'Senha', class: "form-label" %><br />
                    <%= f.password_field :password, class:"form-control", autocomplete: "current-password", placeholder: "segredinho" %>
                  </div>

                  <div class="d-flex flex-column pt-1 mb-5 pb-1">
                    <button type="submit" class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3">
                      Entrar
                    </button>
                    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                      <%= link_to "Esqueci a senha.", new_password_path(resource_name), class: "text-muted" %><br />
                    <% end %>
                  </div>

                  <div class="d-flex justify-content-center align-items-center pb-4">
                    <p class="mb-0 me-2">Sou novo aqui.</p>
                    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                      <%= link_to "CRIAR CONTA", new_registration_path(resource_name), class:"btn btn-outline-danger" %><br />
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>

            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
              <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                <h4 class="mb-4">We are more than just a company</h4>
                <p class="small mb-0">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                  tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
                  exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>



